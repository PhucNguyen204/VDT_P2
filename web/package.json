{
  "name": "edr-dashboard",
  "version": "1.0.0",
  "description": "EDR Security Dashboard Frontend",
  "main": "static/js/dashboard.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass static/scss/main.scss static/css/dashboard.css --style compressed",
    "build:js": "webpack --mode production",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "sass --watch static/scss/main.scss:static/css/dashboard.css",
    "watch:js": "webpack --mode development --watch",
    "lint": "eslint static/js/**/*.js",
    "format": "prettier --write static/js/**/*.js static/css/**/*.css",
    "test": "jest",
    "serve": "live-server --host=localhost --port=3000 --mount=/edr:templates"
  },
  "keywords": [
    "edr",
    "security",
    "dashboard",
    "endpoint-detection",
    "response"
  ],
  "author": "EDR Security Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "d3": "^7.8.5",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
